{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.verify",
  "title": "SCRIPTA Verification Schemas",
  "type": "object",
  "$defs": {
    "Check": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["pass", "fail", "warn"] },
        "details": { "type": "object", "additionalProperties": true }
      },
      "required": ["name", "status"]
    },
    "VerifyRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "spec_id": { "$ref": "common.json#/$defs/Id" },
        "artifact_ref": { "$ref": "common.json#/$defs/ArtifactRef" },
        "implementation_profile": { "$ref": "common.json#/$defs/ImplementationProfile" }
      },
      "required": ["spec_id", "artifact_ref"]
    },
    "VerifyResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "report_id": { "$ref": "common.json#/$defs/Id" },
        "checks": { "type": "array", "items": { "$ref": "#/$defs/Check" } },
        "violations": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["report_id", "checks"]
    },
    "GetVerifyResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "report_id": { "$ref": "common.json#/$defs/Id" },
        "checks": { "type": "array", "items": { "$ref": "#/$defs/Check" } },
        "violations": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["report_id", "checks"]
    }
  }
}
