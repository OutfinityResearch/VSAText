{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.generate",
  "title": "SCRIPTA Generation Schemas",
  "type": "object",
  "$defs": {
    "GenerateRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "plan_id": { "$ref": "common.json#/$defs/Id" },
        "scene_id": { "$ref": "common.json#/$defs/Id" },
        "style": { "type": "string" },
        "constraints": { "type": "array", "items": { "type": "string" } },
        "implementation_profile": { "$ref": "common.json#/$defs/ImplementationProfile" }
      },
      "required": ["plan_id"]
    },
    "GenerateResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "job_id": { "$ref": "common.json#/$defs/Id" },
        "status": { "$ref": "common.json#/$defs/JobStatus" }
      },
      "required": ["job_id", "status"]
    },
    "GetGenerateResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "job_id": { "$ref": "common.json#/$defs/Id" },
        "status": { "$ref": "common.json#/$defs/JobStatus" },
        "output_refs": { "type": "array", "items": { "$ref": "common.json#/$defs/ArtifactRef" } }
      },
      "required": ["job_id", "status"]
    }
  }
}
