{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.research",
  "title": "SCRIPTA Research Schemas",
  "type": "object",
  "$defs": {
    "ResearchQueryRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "query": { "type": "string" },
        "constraints": { "type": "array", "items": { "type": "string" } },
        "implementation_profile": { "$ref": "common.json#/$defs/ImplementationProfile" }
      },
      "required": ["query"]
    },
    "ResearchResult": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": { "type": "string" },
        "snippet": { "type": "string" },
        "source": { "type": "string" }
      },
      "required": ["title", "snippet", "source"]
    },
    "ResearchQueryResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "results": { "type": "array", "items": { "$ref": "#/$defs/ResearchResult" } },
        "audit": { "$ref": "common.json#/$defs/AuditLogEntry" }
      },
      "required": ["results"]
    }
  }
}
