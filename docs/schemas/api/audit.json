{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.audit",
  "title": "SCRIPTA Audit Schemas",
  "type": "object",
  "$defs": {
    "AuditLogResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entry": { "$ref": "common.json#/$defs/AuditLogEntry" }
      },
      "required": ["entry"]
    },
    "AuditLogListResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "entries": { "type": "array", "items": { "$ref": "common.json#/$defs/AuditLogEntry" } }
      },
      "required": ["entries"]
    }
  }
}
