{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.pipeline",
  "title": "SCRIPTA Pipeline Schemas",
  "type": "object",
  "$defs": {
    "PipelineRunRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sop_id": { "$ref": "common.json#/$defs/Id" },
        "spec_id": { "$ref": "common.json#/$defs/Id" },
        "implementation_profile": { "$ref": "common.json#/$defs/ImplementationProfile" }
      },
      "required": ["sop_id", "spec_id"]
    },
    "PipelineRunResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "run_id": { "$ref": "common.json#/$defs/Id" },
        "status": { "$ref": "common.json#/$defs/JobStatus" }
      },
      "required": ["run_id", "status"]
    },
    "GetPipelineRunResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "run_id": { "$ref": "common.json#/$defs/Id" },
        "status": { "$ref": "common.json#/$defs/JobStatus" }
      },
      "required": ["run_id", "status"]
    }
  }
}
