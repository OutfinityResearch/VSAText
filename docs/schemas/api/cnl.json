{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.cnl",
  "title": "SCRIPTA CNL Schemas",
  "type": "object",
  "$defs": {
    "CnlTranslateRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "nl_text": { "type": "string" },
        "context": { "type": "object", "additionalProperties": true }
      },
      "required": ["nl_text"]
    },
    "CnlTranslateResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cnl_text": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["cnl_text"]
    },
    "CnlValidateRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cnl_text": { "type": "string" }
      },
      "required": ["cnl_text"]
    },
    "CnlValidateResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "valid": { "type": "boolean" },
        "errors": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["valid"]
    }
  }
}
