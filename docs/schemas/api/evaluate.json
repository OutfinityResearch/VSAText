{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.evaluate",
  "title": "SCRIPTA Evaluation Schemas",
  "type": "object",
  "$defs": {
    "EvaluationRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "artifact_ref": { "$ref": "common.json#/$defs/ArtifactRef" },
        "metrics": { "type": "array", "items": { "type": "string" } },
        "implementation_profile": { "$ref": "common.json#/$defs/ImplementationProfile" }
      },
      "required": ["artifact_ref", "metrics"]
    },
    "MetricResult": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "value": { "type": ["number", "string"] },
        "details": { "type": "object", "additionalProperties": true }
      },
      "required": ["name", "value"]
    },
    "EvaluationResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "report_id": { "$ref": "common.json#/$defs/Id" },
        "results": { "type": "array", "items": { "$ref": "#/$defs/MetricResult" } }
      },
      "required": ["report_id", "results"]
    },
    "GetEvaluationResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "report_id": { "$ref": "common.json#/$defs/Id" },
        "results": { "type": "array", "items": { "$ref": "#/$defs/MetricResult" } }
      },
      "required": ["report_id", "results"]
    }
  }
}
