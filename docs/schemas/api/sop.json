{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scripta.api.sop",
  "title": "SCRIPTA SOP Schemas",
  "type": "object",
  "$defs": {
    "SopStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "$ref": "common.json#/$defs/Id" },
        "name": { "type": "string" },
        "agent": { "type": "string" },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "policies": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "agent"]
    },
    "Sop": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "$ref": "common.json#/$defs/Id" },
        "name": { "type": "string" },
        "version": { "type": "string" },
        "steps": { "type": "array", "items": { "$ref": "#/$defs/SopStep" } },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "policy_guardrails": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "version", "steps"]
    },
    "CreateSopRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sop": { "$ref": "#/$defs/Sop" }
      },
      "required": ["sop"]
    },
    "CreateSopResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sop": { "$ref": "#/$defs/Sop" },
        "audit": { "$ref": "common.json#/$defs/AuditLogEntry" }
      },
      "required": ["sop"]
    },
    "GetSopResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sop": { "$ref": "#/$defs/Sop" }
      },
      "required": ["sop"]
    }
  }
}
