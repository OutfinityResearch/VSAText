{
  "sop": {
    "id": "sop_story_v1",
    "name": "StoryPipeline",
    "version": "1.0.0",
    "steps": [
      {"id": "step_plan", "name": "Plan", "agent": "planning-agent", "inputs": ["spec"], "outputs": ["plan"]},
      {"id": "step_generate", "name": "Generate", "agent": "generation-agent", "inputs": ["plan"], "outputs": ["draft"]},
      {"id": "step_verify", "name": "Verify", "agent": "verification-agent", "inputs": ["draft"], "outputs": ["report"]}
    ],
    "inputs": ["spec"],
    "outputs": ["draft", "report"],
    "policy_guardrails": ["no_plagiarism", "bias_check"]
  }
}
